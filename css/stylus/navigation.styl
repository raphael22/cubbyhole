//USER INFO
#nav-user-info
	position relative
	float right
	margin-right 1px
	span
		float left
		margin 0 10px
		line-height lh
		text-align center
		text-shadow 0 0 1px black
		overflow hidden
		transition width .5s
		&:before
			color c
			padding 0 5px
			font-family FontAwesome

#nav-user-name:before	
	content '\f007' 
#nav-user-stockage:before
	content '\f0a0' 


	
	

#nav-exit
	width 40px
	float right				
	&:before
		content '\f011'
		position relative
		display inline-block
		font-family FontAwesome
		font-size 25px
		width 40px
		color c	
		line-height lh
		text-align center
		stroke 0,1px,black

/*MENU*/	
#nav-menu
	position relative
	width 40px
	float right			
	line-height lh		
	&:before
		content '\f085'
		position relative
		display inline-block
		font-family FontAwesome
		font-size 25px
		color c
		padding 12px 6px
		padding-top 0
		stroke(0,1px,black)
				
	

#menu
	position relative
	float right
	height 100%
	box-sizing border-box
	li		
		@extend .text-btn			
		float left
		margin-right 1px		
		min-width 80px
		line-height lh
