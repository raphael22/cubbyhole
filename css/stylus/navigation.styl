lh = 50px
header
	position fixed
	top 0
	width 100%
	height 100px
	border-bottom 1px solid darken(c,40%)
	z-index 2		
	background c
	box-sizing border-box
	background radial-gradient(top,white,c,darken(c,5%) 99%)
	transition top .5s .2s, height .5s .2s, box-shadow .5s			
	.btn
		overflow hidden
		box-shadow	0 0 2px 0
	h4
		@extend .text-btn
		position relative
		float right
		height 100%
		line-height lh
		padding 0 20px 
		
#header-logo-container
	position absolute
	z-index 3
	height 100px
	line-height lh 
	left 50%
	padding 0 10px 
	transform translateX(-50%)
	text-align center
	overflow hidden
	transition height .5s .2s
	  transition 1s all
	&:hover
		span
			letter-spacing 2px 
		for row in 1..9
			span:nth-child({row})		
				//animation-play-state paused
		
	span
		font-size 22px
		letter-spacing -2px 
		display inline-block
		backface-visibility hidden
		transition 1s all	ease-in-out
	for row in 1..9
		span:nth-child({row})			
			animation ty1 3s 0s+(row/10) ease-in-out infinite
.header-logo-load
	for row in 1..9
			span:nth-child({row})		
				animation-play-state paused !important
				
.header-min
	height 50px	
	box-shadow0 0 2px 0px black
	#header-logo-container
		height 70px



//USER INFO
#nav-user-info
	position relative
	height 100%
	float right
	margin-right 1px
	display inline-flex
	span
		width 85px
		float left
		margin 0 10px
		line-height lh
		text-align center
		text-shadow 0 0 1px black
		overflow hidden
		transition width .5s
		&:before
			color c
			padding 0 5px
			font-family FontAwesome

#nav-user-name:before	
	content '\f007' 
#nav-user-stockage:before
	content '\f0a0' 


	
	

#nav-exit
	width 40px
	height 100%
	float right				
	&:before
		content '\f011'
		position relative
		display inline-block
		font-family FontAwesome
		font-size 25px
		height 100px
		width 40px
		color c	
		line-height lh
		text-align center
		stroke 0,1px,black

/*MENU*/	
#nav-menu
	position relative
	width 40px
	height 100%
	float left			
	line-height lh		
	&:before
		content '\f085'
		position relative
		display inline-block
		font-family FontAwesome
		font-size 25px
		color c
		padding 12px 6px
		padding-top 0
		stroke 0,1px,black
				
	

#menu
	position relative
	float left
	height 100%
	box-sizing border-box
	li		
		@extend .text-btn			
		float left
		margin-right 1px		
		min-width 80px
		line-height lh
		height 100%
		box-sizing border-box		
		&:after
			content ""
			display table
			position relative
			width 60%
			left 20%
			height 2px
			margin-top -18px
			c2=rgba(darken(c2,30%),.5)
			box-shadow 0 5px 1px 0 c2
