lh = 40px
header
	position fixed
	top 0
	opacity 0.9
	width 100%
	height 100px
	border-bottom 1px solid darken(c,40%)
	z-index 2		
	background c
	box-sizing border-box
	background radial-gradient(top,white,c,darken(c,5%) 99%)
	transition top .5s .2s, height .5s .2s, box-shadow .5s			
	.btn
		overflow hidden
		height 100%
		border-radius 1px	
		box-sizing border-box
		 
	h4
		@extend .text-btn
		position relative
		float right
		height 100%
		line-height lh
		padding 0 20px 
		
