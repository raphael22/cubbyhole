@import 'nib'

//VARS
c = #efefef
c2 = dodgerblue
red = #e74c3c
green = #2ecc71


//MIXINS
stroke(to,tb,tc)
	text-shadow to to tb tc,
				-to to tb tc,
				-to -to tb tc,
				to -to tb tc
transY(ty,name)
	@keyframes name
		0%,30%,100%
			transform translateY(0)
		10%
			transform translateY(-(ty))	
		20%
			transform translateY(ty)	
//KEYFRAMES
transY(3px,ty1)

@keyframes revolution 
	from
		transform rotate(0deg) translate(inherit)
	
	to
		transform rotate(360deg) translate(inherit)

@keyframes rotate
	from
		transform rotate(0deg)
	
	to
		transform rotate(360deg)





@keyframes fadeOut{
	from{ opacity 1 } 
	to{ opacity 0 }
}
@keyframes fadeIn{
	from{ opacity 0 } 
	to{ opacity 1 }
}

@keyframes progressBar{
	0%{ background-position 0 0 } 
  100%{ background-position 50px 50px }
}
	
@keyframes progressWidth
	0% 
		width 0%
		opacity 0
	10%
		width 0%
		opacity 1
	20%
		width 30%
	30%
		width 35%
	40%
		width 60%
	90%
		width 100%
		opacity 1
	100%
		width 100% 
		opacity 0


tsc=rgba(lighten(c,30%),1)
@keyframes neon
	0%,30%,100% 
		stroke(2px,6px,rgba(tsc,.6))
	10% 
		stroke(2px,8px,rgba(tsc,1))

/*
***GENERALS
*/

p,h6,h5,h4,h3,h2,h1,span,div
	margin 0
	font-family 'Raleway', sans-serif 
	font-weight 200 
	text-shadow 0 0 1px
	backface-visibility hidden

h2
	font-weight 400
 
p,h6,h5,h4,h3,h2,h1,.cursor-off 
	cursor default
	backface-visibility hidden 
	-webkit-font-smoothing antialiased

li,.cursor-on
	cursor pointer 	

html
	min-height 100%
	position relative	
	background-repeat no-repeat	
	background linear-gradient(-15deg,rgba(midnightblue,.8),rgba(darkturquoise,.8))


body
	width 100%
	height 100%
	margin0
	padding 0
	padding-bottom 50px
	display inline-block
	transition transform 1s .5s ease-in-out	
	&:before
		content ''
		z-index -1
		display inline-block
		position absolute
		left 0
		right 0
		bottom 0
		top 0
		background radial-gradient(rgba(cyan,.15) 2%,rgba(indigo,.2) 70%)			
	
	&:after
		content ''
		z-index -1
		display inline-block
		position absolute
		left 0
		right 0
		top 0
		bottom 0			
		background-position 0 100px
		background linear-gradient(transparent 50%, rgba(0,0,0, 0.2)  50%)
		background-size 100% 3px	
		pointer-events none	
	
	

.debug-css
	outline 1px red solid
	*
		outline 1px red solid	
	*:before,*:after
		outline 1px yellow solid
	


