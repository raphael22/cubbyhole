header
	position fixed
	top 0
	width 100%
	height 100px
	border-bottom 1px solid darken(c,40%)
	z-index 2		
	background c
	box-sizing border-box
	background radial-gradient(top,white,c,darken(c,5%) 99%)
	transition top .5s .2s, height .5s .2s, box-shadow .5s			
	.btn
		overflow hidden
		box-shadow	0 0 2px 0px black
#header-logo-container
	position absolute
	z-index 3
	height 100px
	line-height @height 
	left 50%
	padding 0 10px 
	transform translateX(-50%)
	text-align center
	overflow hidden
	transition height .5s .2s
	&:hover
		&:before,&:after
			height 200%
		&:before
			margin-left 0
			transform rotate(90deg) translateX(-30px)
		&:after
			transform rotate(-90deg) translateX(25px)
		for row in 1..9
			span:nth-child({row})		
				animation-play-state paused 
	&:before,&:after
		content ""
		position absolute
		display inline-block
		width 100%
		height 100%
		left 0
		bottom 0
		transition .5s all
		pointer-events none
	&:before	
		margin-left -3px	
		border-right 1px solid black
	&:after		
		border-left 1px solid black
	span
		font-size 22px
		display inline-block
		backface-visibility hidden
		transition 1s all		
	for row in 1..9
		span:nth-child({row})			
			animation ty1 3s 0s+(row/10) ease-in-out infinite
.header-logo-load
	for row in 1..9
			span:nth-child({row})		
				animation-play-state paused !important
				
.header-min
	height 70px	
	top -30px		
	box-shadow0 0 2px 0px black
	#header-logo-container
		height 70px



//USER INFO
#nav-user-info
	position relative
	height 100%
	float right
	margin-right 1px
	display inline-flex
	span
		width 85px
		float left
		margin 0 10px
		line-height 100px
		text-align center
		text-shadow 0 0 1px black
		overflow hidden
		transition width .5s
		&:before
			color c
			padding 0 5px
			font-family FontAwesome

#nav-user-name:before	
	content '\f007' 
#nav-user-stockage:before
	content '\f0a0' 


#nav-user-name:after
	content ''
	position absolute
	display inline-block
	width 1px
	height 20px
	margin-top 40px
	margin-left 15px
	background rgba(black,.4)
	box-shadow 0 0 1px 0 rgba(black,.4)
	transition opacity .5s .5s
	
	

#nav-exit
	width 40px
	height 100%
	float right				
	&:before
		content '\f011'
		position relative
		display inline-block
		font-family FontAwesome
		font-size 25px
		height 100px
		width 40px
		color c	
		line-height 100px
		text-align center
		stroke 0,1px,black

/*MENU*/	
#nav-menu
	position relative
	width 40px
	height 100%
	float left			
	line-height 75px		
	&:before
		content '\f085'
		position relative
		display inline-block
		font-family FontAwesome
		font-size 25px
		color c
		padding 12px 6px	
		stroke 0,1px,black
				
	

#menu
	position relative
	float left
	height 100%
	box-sizing border-box
	li					
		float left
		margin-right 1px		
		min-width 80px
		line-height 100px
		height 100%
		box-sizing border-box
		&:before
			content attr(data-uri)
			width 100%
			font-family 'Raleway', sans-serif 
			font-weight 100
			text-shadow 0 0 1px
			text-align center
			display inline-block					
		
